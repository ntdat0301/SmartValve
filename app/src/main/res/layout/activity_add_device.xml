<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_add_device"
    tools:context=".AddDevice">

    <TextView
        android:id="@+id/textViewAddDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/noto_sans_cjk_jp_bold"
        android:gravity="center"
        android:text="Add Device"
        android:textColor="#3D4D17"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editID"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/text_username"
        android:fontFamily="@font/noto_sans_cjk_jp_bold"
        android:drawableLeft="@drawable/tag"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="ID Device"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddDevice"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_NameDevice"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_username"
        android:fontFamily="@font/noto_sans_cjk_jp_bold"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Name Device"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editID" />

    <Button
        android:id="@+id/btnAddDevice"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_login"
        android:text="Add Device"
        android:textSize="20dp"
        android:fontFamily="@font/noto_sans_cjk_jp_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_NameDevice" />


</androidx.constraintlayout.widget.ConstraintLayout>